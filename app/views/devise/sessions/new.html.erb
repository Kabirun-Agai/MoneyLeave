<div class="main users-new">
  <div class="container">
    <div class="form-heading">
      <h5>ログイン</h5>
    </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <% if resource.errors.include?(:email) %>
            <p style="color: red;"><%= resource.errors.full_messages_for(:email).first %>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password" %>
          <% if resource.errors.include?(:password) %>
            <p style="color: red;"><%= resource.errors.full_messages_for(:password).first %>
        <% end %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember , "次回から自動でログインする" %>
          </div>
        <% end %>

        <br/>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
        <br/>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
